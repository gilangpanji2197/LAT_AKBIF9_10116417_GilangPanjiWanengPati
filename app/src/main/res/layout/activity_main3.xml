<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="main3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:orientation="vertical"
        android:layout_marginTop="28dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relative1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/nunito_bold"
            android:textSize="21dp"
            android:text="Nama Panggilan Kamu"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="339dp"
            android:id="@+id/txtnama"
            android:layout_marginLeft="10dp"
            android:layout_height="match_parent"
            android:textColorHint="#999999"
            android:gravity="bottom"
            android:hint="Contoh : Budi"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relative1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:textSize="21dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Umur Kamu"
            android:textColor="#000000"/>

        <EditText
            android:layout_width="339dp"
            android:layout_height="match_parent"
            android:id="@+id/txtumur"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:hint="Contoh : 12"
            android:singleLine="true"
            android:textColorHint="#999999"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/relative1"
        android:paddingTop="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp">

        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:id="@+id/BtnMasuk"
            android:onClick="masuk3"
            android:background="@drawable/rbutton"
            android:fontFamily="@font/nunito_bold"
            android:text="Selanjutnya"
            android:textAllCaps="false"
            android:textStyle="bold"/>


    </RelativeLayout>

</RelativeLayout>